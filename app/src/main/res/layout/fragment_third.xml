<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment">

    <!-- TODO: Develop Aesthetics -->
    <EditText
        android:id="@+id/settingSearch"
        android:drawableLeft="@drawable/ic_search"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Search for a setting..." />
    <Button
        android:id="@+id/savedDestinationsButton"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="95dp"
        android:text="Saved Destinations"/>

    <Button
        android:id="@+id/savedContactsButton"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="150dp"
        android:text="Saved Contacts"/>

    <Button
        android:id="@+id/mapSettingsButton"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="205dp"
        android:text="Map Settings"/>

    <Button
        android:id="@+id/themeSettingsButton"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="260dp"
        android:text="Appearance"/>

    <Button
        android:id="@+id/batterySavingSettingsButton"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="315dp"
        android:text="Optimise Battery Usage"/>

    <Button
        android:id="@+id/privAndSecButton"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="370dp"
        android:text="Privacy and Security"/>

    <Button
        android:id="@+id/helpAndSupportButton"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="425dp"
        android:text="Help and Support"/>

    <Button
        android:id="@+id/aboutUsButton"
        android:layout_width="267dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="480dp"
        android:text="About Us"/>

    <TextView
        android:id="@+id/appVersion"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="560dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="(App Name) v1.2"/>


</FrameLayout>